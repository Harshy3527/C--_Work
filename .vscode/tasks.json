{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Active File",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-O2",
        "-Wall",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      }
    },

    {
      "label": "Run Interactive",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/c",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "dependsOn": "Build Active File",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },

    {
      "label": "Run with File I/O",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/c",
        // âœ… this line ensures files are created if missing
        "(if not exist \"${fileDirname}\\inputf.in\" echo.>\"${fileDirname}\\inputf.in\") && (if not exist \"${fileDirname}\\outputf.out\" echo.>\"${fileDirname}\\outputf.out\") && \"${fileDirname}\\${fileBasenameNoExtension}.exe\" < \"${fileDirname}\\inputf.in\" > \"${fileDirname}\\outputf.out\""
      ],
      "dependsOn": "Build Active File",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "clear": true,
        "showReuseMessage": false
      }
    }
  ]
}
